<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_titreRensPret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/renseignement"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/id_RensMont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:text="@string/montantPret"/>
        <TextView
            android:id="@+id/id_resultatMontant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/id_RensTaux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:text="@string/tauxAnnuel"/>
        <TextView
            android:id="@+id/id_resultatTaux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/id_RensDuree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:text="@string/dureeMois"/>
        <TextView
            android:id="@+id/id_resultatDuree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/id_RensVersement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:text="@string/versement"/>
        <TextView
            android:id="@+id/id_resultatVersement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/id_RensInteret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:text="@string/interet"/>
        <TextView
            android:id="@+id/id_resultatInteret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/id_RensTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:text="@string/pretTotal"/>
        <TextView
            android:id="@+id/id_resultatTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="70"
            android:text="@string/buttonRetour"
            android:textAllCaps="false"/>

    </LinearLayout>
</LinearLayout>